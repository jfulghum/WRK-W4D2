<h1>New Cat Rental Opportunity!! </h1>
<form action="<%=cat_rental_requests_url%>" method="post">

  <label for="cat_rental">Cats available:</label>
  <select name="cat_rental_request[cat_id]" id="cat_rental">
    <option selected disabled>-- select a cat --</option>
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>
  <br>
  <br>
  <label>Select your start date!
    <input type="date" name="cat_rental_request[start_date]" value="">
  </label>
  <br>
  <br>
  <label>Select your end date!
    <input type="date" name="cat_rental_request[end_date]" value="">
  </label>
  <br>
  <br>


  <input type="submit" value="Submit here!">
  <!-- no name b/c we don't want anything in the params hash -->



</form>
